{
  "name": "slideshot",
  "version": "1.0.0",
  "description": "将 AI/HTML 幻灯片精准裁切为无白边的 PNG/JPEG，并可合并为 PDF 的小工具（Puppeteer）。",
  "main": "shot.js",
  "type": "commonjs",
  "bin": {
    "slideshot": "bin/slideshot.js"
  },
  "scripts": {
    "slideshot": "node bin/slideshot.js",
    "slideshot:2x": "node bin/slideshot.js -s 2",
    "slideshot:jpg": "node bin/slideshot.js -s 2 --out-ext jpg -q 85",
    "test": "node bin/slideshot.js --dry-run"
  },
  "keywords": [
    "puppeteer",
    "slide",
    "screenshot",
    "png",
    "jpeg",
    "pdf",
    "html",
    "glm",
    "ai",
    "slides"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/certaindragon3/slideshot-chatzai.git"
  },
  "bugs": {
    "url": "https://github.com/certaindragon3/slideshot-chatzai/issues"
  },
  "homepage": "https://github.com/certaindragon3/slideshot-chatzai#readme",
  "dependencies": {
    "puppeteer": "^24.20.0"
  }
}
